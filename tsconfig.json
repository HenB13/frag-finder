{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es2021",
      "lib": ["es2021"],
      "module": "ES2020",
      "moduleResolution": "node",
      "allowJs": true,
      "strictNullChecks": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "removeComments": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["./src/**/*"],
  }