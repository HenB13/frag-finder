{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "lib": ["ESnext"],
        "module": "es6",
        "moduleResolution": "node",
        "allowJs": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["./src/types", "src/**/*.test.ts", "src/**/*.spec.ts"],
}

